<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <query name="com.pls.user.domain.UserSettingsEntity.Q_GET_BY_PERSON_ID">
        <![CDATA[
                from UserSettingsEntity WHERE personId = :personId
        ]]>
    </query>
    <query name="com.pls.user.domain.UserSettingsEntity.Q_GET_BY_PERSON_ID_AND_KEY">
        <![CDATA[
                from UserSettingsEntity WHERE personId = :personId AND key = :key
        ]]>
    </query>
</hibernate-mapping>